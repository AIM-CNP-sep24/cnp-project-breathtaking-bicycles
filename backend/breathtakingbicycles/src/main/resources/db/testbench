use breathtakingbicycles

select * from taal
select * from benodigdheid
select * from benodigdheid_vertaling

SELECT * FROM benodigdheid WHERE parent_id = 0 ORDER BY rangnr ASC
SELECT tekst, code, benodigdheid_id FROM benodigdheid_vertaling bv LEFT OUTER JOIN taal t on bv.taal_id = t.id where bv.benodigdheid_id = 1 AND (code = 'NL' OR code = 'EN')

SELECT
    b.id,
    MAX(CASE WHEN t.code = 'NL' THEN bv.tekst END) AS tekst_nl,
    MAX(CASE WHEN t.code = 'EN' THEN bv.tekst END) AS tekst_en,
    b.parent_id,
    b.laag,
    b.rangnr,
    b.imgsrc
FROM
    benodigdheid b
LEFT JOIN
    benodigdheid_vertaling bv ON b.id = bv.benodigdheid_id
LEFT JOIN
    taal t ON bv.taal_id = t.id
WHERE
    t.code IN ('NL', 'EN') and b.parent_id = 0
GROUP BY
    b.id, b.parent_id, b.laag, b.rangnr, b.imgsrc;

SELECT
    b.id,
    MAX(CASE WHEN t.code = 'NL' THEN bv.tekst END) AS tekst_nl,
    MAX(CASE WHEN t.code = 'EN' THEN bv.tekst END) AS tekst_en,
FROM
    benodigdheid b
LEFT JOIN
    benodigdheid_vertaling bv ON b.id = bv.benodigdheid_id
LEFT JOIN
    taal t ON bv.taal_id = t.id
WHERE
    t.code IN ('NL', 'EN') and b.parent_id = 0
GROUP BY
    b.id